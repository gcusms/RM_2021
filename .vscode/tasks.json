{
	"version": "2.0.0",
	"tasks": [
	{
		"type": "shell", /* 定义任务是被作为进程运⾏还是在 shell 中作为命令运⾏，默认是shell，即是在终端中运⾏，因为终端执⾏*/
		"label": "build", /* 要与launch.json⽂件⾥的preLaunchTask的内容保持⼀致 */
		"command": "/usr/bin/g++", /* 这⾥填写你的编译器地址 */
		"args": [
			/* 类似与qt的Pro⽂件⾥开始的那⼏句 */
			// "-Ofast",
			// "-march=native",
			// "-flto",
			// "-frename-registers",
			"-std=c++14",// 静态链接
			"-static-libgcc",
			"-lpthread",

			/* 说明整个项⽬所需的头⽂件路径（.h）*/
			"-I","${workspaceFolder}/",
			"-I","${workspaceFolder}/module/angle_solve",
			"-I","${workspaceFolder}/module/armor",
			"-I","${workspaceFolder}/devices/serial",
			"-I","${workspaceFolder}/devices/camera",
			"-I","${workspaceFolder}/module/roi",
			"-I","${workspaceFolder}/module/filter",
			"-I","${workspaceFolder}/module/RM_Buff/Center_R",
			"-I","${workspaceFolder}/module/RM_Buff/Fan_Armor",
			"-I","${workspaceFolder}/module/RM_Buff/Fan_Blade",
			"-I","${workspaceFolder}/module/RM_Buff/Object",
			"-I","${workspaceFolder}/module/RM_Buff/RM_FPS",
			"-I","${workspaceFolder}/module/RM_Buff/Target",
			"-I","${workspaceFolder}/module/RM_Buff",
			"-I","${workspaceFolder}/module/top_detect",
			"-I","${workspaceFolder}/module/orc",
			"-I","${workspaceFolder}/base",
			"-I","/usr/local/include",
			"-I","/usr/local/include/opencv4",
			"-I","/usr/local/include/opencv4/opencv2",
			"-L","/usr/local/lib",
			/* 说明整个项⽬所需的源⽂件路径(.cpp) */
			"-g",
			"${workspaceFolder}/module/angle_solve/rm_solve_pnp.cpp",
			"${workspaceFolder}/module/armor/rm_armor.cpp",
			"${workspaceFolder}/devices/serial/rm_serial_port.cpp",
			"${workspaceFolder}/devices/camera/rm_video_capture.cpp",
			"${workspaceFolder}/module/roi/rm_roi.cpp",
			"${workspaceFolder}/module/filter/filter.cpp",
			"${workspaceFolder}/module/RM_Buff/Center_R/Center_R.cpp",
			"${workspaceFolder}/module/RM_Buff/Fan_Armor/Fan_Armor.cpp",
			"${workspaceFolder}/module/RM_Buff/Fan_Blade/Fan_Blade.cpp",
			"${workspaceFolder}/module/RM_Buff/Object/Object.cpp",
			"${workspaceFolder}/module/RM_Buff/RM_FPS/RM_FPS.cpp",
			"${workspaceFolder}/module/RM_Buff/Target/Target.cpp",
			"${workspaceFolder}/module/RM_Buff/RM_Buff.cpp",
			"${workspaceFolder}/module/top_detect/top.cpp",
			"${workspaceFolder}/module/orc/orc.cpp",
			"${workspaceFolder}/base/connector.cpp",
			"${workspaceFolder}/user/main.cpp",/* ${workspaceFolder}表⽰路径从当前项⽬⽂件夹开始 */
			"-o", /* 编译输出⽂件的存放路径 */
			"${workspaceFolder}/run.o", /* 要与launch.json⽂件⾥的program的内容保持⼀致 */
			/* ${fileDirname} 是指 ⽂件⽬录名 相当于${workspaceFolder}*/
			/* ${fileBasenameNoExtension}意思是指 该路径下没有扩展名的⽂件基本名称没有扩展名 */
			/* 也可以这样："${workspaceFolder}/run.o", */
			/* OpenCV的lib库 */
			"/usr/local/lib/libopencv_*",
			"/lib/libMVSDK.so",//工业相机驱动
		],
		"options": {
			"cwd": "${workspaceFolder}" /* 调试程序时的⼯作⽬录，⼀般为${workspaceFolder}即代码所在⽬录 */
		},
		"problemMatcher": [
			"$gcc" /* 要使⽤的问题匹配程序。 */
		],
		"group": "build" /* 将任务标记为可通过 "运⾏⽣成任务" 命令访问的⽣成任务。*/
	}
	]
	}